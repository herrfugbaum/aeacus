  "license": "ISC",
  "bugs": {
    "url": "https://github.com/herrfugbaum/aeacus./issues"
  },
  "homepage": "https://github.com/herrfugbaum/aeacus#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.6.0",
    "jest": "^20.0.4",
    "jsdoc": "^3.5.4",
    "regenerator-runtime": "^0.11.0",
    "standard": "^10.0.3"
  }
